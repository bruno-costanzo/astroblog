---
import Layout from "../layouts/Layout.astro";
import Subtitle from "../components/Subtitle.astro";
import { Icon } from "astro-icon/components";

const contacts = [
    {
        icon: "lucide:mail",
        label: "Email",
        value: "dev.bcostanzo@gmail.com",
        href: "mailto:dev.bcostanzo@gmail.com",
    },
    {
        icon: "lucide:github",
        label: "GitHub",
        value: "bruno-costanzo",
        href: "https://github.com/bruno-costanzo",
    },
    {
        icon: "lucide:linkedin",
        label: "LinkedIn",
        value: "brunocostanzo",
        href: "https://www.linkedin.com/in/brunocostanzo/",
    },
];
---

<Layout pageTitle="Contacto">
    <div class="container mx-auto p-8 max-w-6xl">
        <Subtitle text="Contacto" />

        <p class="mt-4 opacity-80">
            Si querés contactarme, podés hacerlo por cualquiera de estos medios:
        </p>

        <div class="flex flex-col gap-4 mt-8">
            {
                contacts.map((contact) => (
                    <a
                        href={contact.href}
                        target="_blank"
                        rel="noopener"
                        class="flex items-center gap-4 p-4 rounded-lg bg-base-100 hover:bg-base-300 transition-colors"
                    >
                        <Icon name={contact.icon} class="w-6 h-6" />
                        <div>
                            <p class="text-sm opacity-60">{contact.label}</p>
                            <p class="font-medium">{contact.value}</p>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</Layout>
